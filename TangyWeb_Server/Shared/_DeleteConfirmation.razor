 
   <div class="modal fade" data-backdrop="static" data-keyboard="false" id="deleteConfirmationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete
            </div>
            <div class="modal-footer">
                <button type="button" @onclick ="()=>OnConfirmDelete(false)" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                @if(IsLoadingParameter){
                     <div class="text-center">
                    <img src="/Images/loading.gif" alt="loading">
                </div>
                }
                else{
                     <button type="button" @onclick ="()=>OnConfirmDelete(true)" class="btn btn-danger">
                    Delete
                </button>
                }
               
            </div>
        </div>
    </div>
</div>

@code{
    [Parameter]
    public EventCallback<bool> OnButtonClick{ get; set; }
    [Parameter]
    public bool IsLoadingParameter{get; set;}
    private async Task OnConfirmDelete(bool value)
    {
        if (value)
        {
            await OnButtonClick.InvokeAsync(value);
        }
    }
}

